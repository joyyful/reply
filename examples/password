var reply = require('./../');

var get_input = function(){
    reply.confirm('Do you want to hear the biggest secret in the world?', function(err, yes){
        if (!err && yes)
	       console.log("Ok... if you're sure you're ready!");
        else
            return console.log("Wow, you're missing out. Kbyeeeeee.");
        reply.get({ enter your name: 'joy zhang', enter the magic password: { type: 'password'} }, function(err, result){
            if (err) return bye();
            console.log(result);
        reply.confirm('Are you sure this is what you want to do?', function(err, yes){
            if (err || !yes)
                get_input();
            else
                console.log("GUESS WHAT? Tricked ya, hahaha.")
            })
        })
    });	
}

var bye = function(){
	console.log("Until next time, my friend!");

get_input();